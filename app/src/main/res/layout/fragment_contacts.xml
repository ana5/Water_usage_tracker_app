<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsFragment"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="CONTACTS"
        android:textStyle="bold"
        android:id="@+id/text_contacts"
        android:layout_centerHorizontal="true"
        android:textColor="#09C6DF"/>




    <androidx.cardview.widget.CardView
        android:id="@+id/contact_1_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/text_contacts"
        android:layout_marginTop="30dp"
        android:elevation="50dp"
        android:backgroundTint="#09C6DF"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contact_card_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="12dp"
                android:id="@+id/view1"

                app:cardCornerRadius="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                app:layout_constraintBottom_toBottomOf="@+id/contact_1_email_id"
                app:layout_constraintEnd_toStartOf="@+id/contact_1_number"
                app:layout_constraintHorizontal_bias="0.148"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/contact_1_name"
                app:layout_constraintVertical_bias="0.346">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/bikki_profile_pic" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/contact_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Bikki Bhushan"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/contact_1_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.726"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/contact_1_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="+917519159487"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/contact_1_name"
                app:layout_constraintStart_toStartOf="@+id/contact_1_name"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/contact_1_email_id"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="bikkibhushan1@gmail.com"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/contact_1_number"
                app:layout_constraintStart_toStartOf="@+id/contact_1_number" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView

        android:id="@+id/contact_2_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect"



        android:elevation="50dp"
        android:backgroundTint="#09C6DF"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/contact_1_card"
        android:layout_marginVertical="05dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contact_card_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="12dp"
                android:id="@+id/view2"

                app:cardCornerRadius="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                app:layout_constraintBottom_toBottomOf="@+id/contact_2_email_id"
                app:layout_constraintEnd_toStartOf="@+id/contact_2_number"
                app:layout_constraintHorizontal_bias="0.148"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/contact_2_name"
                app:layout_constraintVertical_bias="0.346">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sumit_profile_pic" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/contact_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Sumit Verma"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/contact_2_number"
                app:layout_constraintEnd_toEndOf="@id/contact_card_2_layout"
                app:layout_constraintHorizontal_bias="0.742"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/contact_2_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="+919772621183"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/contact_2_name"
                app:layout_constraintStart_toStartOf="@+id/contact_2_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.527" />

            <TextView
                android:id="@+id/contact_2_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="sumitverma71197@gmail.com"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/contact_2_number"
                app:layout_constraintStart_toStartOf="@+id/contact_2_number" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>